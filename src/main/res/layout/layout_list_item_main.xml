<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="80dip"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants"
    >

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_trip"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        card_view:cardCornerRadius="2dp">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:paddingTop="14dp"
        android:paddingLeft="15dp"
        android:paddingRight="0dp"
        android:paddingBottom="15dp"
        >

    <!-- Title of trip-->
    <TextView
        android:id="@+id/txt_trip_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="İspanya Gezisi"
        android:layout_marginBottom="2dp"
        style="@style/tripTitle"
        />
    <!-- Artist Name -->
    <TextView
        android:id="@+id/txt_day_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_trip_title"
        android:text="5 Gün  |  "
        style="@style/tripDetail"/>

    <TextView
        android:id="@+id/txt_note_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_trip_title"
        android:layout_toRightOf="@+id/txt_day_num"
        android:text="12 Not"
        style="@style/tripDetail"/>

    <ImageButton
        android:id="@+id/ib_options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@null"
        android:src="@drawable/ic_action_overflow_round"
        android:contentDescription="@string/trip_options"
        android:gravity="right"
        android:maxHeight="10dp" />
    </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>