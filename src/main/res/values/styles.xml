<resources>
    <!-- Base application theme. -->
    <style name="MyAppTheme" parent="@android:style/Theme.Holo.Light">
        <!-- Any customizations for your app running on 3.0+ devices here -->
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="popupMenu" parent="Theme.AppCompat.Light">
        <item name="android:colorBackground">@color/material_blue_grey_800</item>
        <item name="android:background">@color/material_pink_700</item>
    </style>

    <style name="tripTitle" parent="@android:style/Theme.Holo.Light">
        <item name="android:textSize">20dip</item>
        <item name="android:textColor">#424242</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="tripDetail" parent="@android:style/Theme.Holo.Light">
        <item name="android:textSize">13dip</item>
        <item name="android:textColor">#9e9e9e</item>
    </style>

    <style name="note_time" parent="@android:style/Theme.Holo.Light">
        <item name="android:textSize">22dip</item>
        <item name="android:textColor">#424242</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="note_content" parent="@android:style/Theme.Holo.Light">
        <item name="android:textSize">14dip</item>
        <item name="android:textColor">#555555</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <style name="add_trip" parent="@android:style/Theme.Holo.Light">
        <item name="android:textSize">16dip</item>
    </style>
    <style name="add_note" parent="@android:style/Theme.Holo.Light">
        <item name="android:textSize">16dip</item>
    </style>

    <style name="MooTheme" parent="android:Theme">
        <item name="android:spinnerItemStyle">@style/MooSpinnerItem</item>
    </style>

    <style name="MooSpinnerItem" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:textAppearance">@style/MooTextAppearanceSpinnerItem</item>
    </style>

    <style name="MooTextAppearanceSpinnerItem" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textColor">#F00</item>
    </style>

</resources>
